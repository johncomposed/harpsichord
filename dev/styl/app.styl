html
  overflow hidden
  height 100%
  -webkit-user-select none

body 
  font menu
  overflow-y hidden
  background-color #F7F7F7

a
  color #000
  text-decoration none
  cursor pointer

.row
  display flex
  justify-content space-between
  padding 10px  
  line-height 30px
  align-content center

header
  
  background-image linear-gradient(#6B919E, #4B6771)
  text-shadow -1px -1px 1px hsla(195,18%,20%,1), 2px 2px 1px hsla(195,21%,46%,1)
  font-size 16px
  a
    color #000000

main
  
section
  border-bottom 1px #9FA4AB solid
  
  &:last-child
    border-bottom 0
  
  a
    margin-left 5px
    
  .row 
    padding 2px 10px
    
  .port-box
    font-size 11px
    padding 2px
    background-color #ADADAD
    border-radius 2px 

  .on
    color #3A753A

  .off
    color #B32D2D
    

    
.settings 
  background-image linear-gradient(#9e9e9e, #909090)
  box-shadow inset 0px 10px 20px 0px #A5A2A2
  padding 10px 30px 10px 10px
  
  label 
    font-size 0.8em
    color #3E3E3E
  
  input 
    display block
    background-color rgba(25, 25, 25, 0.3)
    border 0px
    color #fff
    padding-left 10px
    height 2em
    border-radius 3px
    outline none
    font-family inherit
    width 100%
    font-size 1em

  .row
    padding 0
    line-height initial

  .setting 
    margin-top 8px
    
  .name 
    width 65%
    
  .del-row 
    margin-top 20px
    
  .del 
    color #9C3232
    font-size 0.9em
  



  



